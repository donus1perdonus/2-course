{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Компиляция",
            "type": "shell",
            "command": "g++", // Замените на ваш компилятор, если нужно
            "args": [
                "-g", // Включить отладочную информацию
                "${file}", // Текущий файл
                "-o", // Указать имя выходного файла
                "${workspaceFolder}\\${fileBasenameNoExtension}.exe" // Имя выходного файла
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "never", // Не показывать терминал
                "focus": false,
                "panel": "shared" // Использовать общий терминал
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Удалить скомпилированный файл",
            "type": "shell",
            "command": "del",
            "args": [
                "${workspaceFolder}\\${fileBasenameNoExtension}.exe"
            ],
            "group": "none",
            "presentation": {
                "echo": false,
                "reveal": "never", // Не показывать терминал
                "focus": false,
                "panel": "shared" // Использовать общий терминал
            },
            "problemMatcher": []
        }
    ]
}